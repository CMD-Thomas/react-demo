nav 
  position fixed
  top 0
  right 0
  left 0
  height 55px
  background-color #100f2b

#checkbox_toggle
  display none

.nav__list
  transform translate(-100%)
  // No idea where this 15px comes from
  margin-top 15px
  height 100vh
  background-color #100f2b
  background url('../../img/background-2.png')
  background-size cover
  background-repeat no-repeat
  transition all ease-in 0.25s
  li,
  a 
    padding 2em
    text-decoration none
    text-align center
    color white
    &:first-child 
      padding-top 4em
      

.nav__toggle 
  position relative
  display block
  opacity .8
  width 45px
  height 35px
  cursor pointer

  
.nav__dash
  position absolute
  left 8px
  margin-top 10px
  border-radius 5px
  width 100%
  height 5px 
  background white
  -webkit-transition  all .3s ease-in-out
  -moz-transition  all .3s ease-in-out
  -o-transition  all .3s ease-in-out
  transition  all .3s ease-in-out

    
.nav__dash--top 
  top 0
  
.nav__dash--middle
  top 15px
  width 80%

.nav__dash--bottom
  top 30px

#checkbox_toggle:checked ~ .nav__list
  transform translate(0)
  
#checkbox_toggle:checked+label .nav__dash--top
  top 15px
  left 8px
  opacity 1
  transform rotate(45deg)

#checkbox_toggle:checked+label .nav__dash--middle
  opacity 0
  
#checkbox_toggle:checked+label .nav__dash--bottom
  position absolute
  top 15px
  left 8px
  opacity 1
  transform rotate(-45deg)
  
.nav__title
  margin-top -20px
  text-align center
  color white

